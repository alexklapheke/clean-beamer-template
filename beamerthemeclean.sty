% http://colorschemedesigner.com/#0R628uRpUWrRC
\definecolor{CustomDarkBlue}{HTML}{081220} % generic dark, for text etc.
\definecolor{CustomLightBlue}{HTML}{BDD1EE} % for footer line
\definecolor{CustomRed}{HTML}{CE2A07} % primary highlight: for more important text
\definecolor{CustomGray}{HTML}{9BA0A9} % for less important text
\definecolor{CustomBlue}{HTML}{0658CF} % secondary highlight
\definecolor{CustomPale}{HTML}{DFE8F7} % background for blocks
\definecolor{CustomWhite}{HTML}{FAFAFA} % generic light, for background

% Beamer Layout
\useoutertheme{default}
\useinnertheme{default}

% Top part (Page count and section names)
\setbeamertemplate{headline}{%
	\begin{beamercolorbox}[ht=4.5ex,dp=0ex]{headline}
		% navigation
		\strut~ \insertshorttitle~%
		\setbox0=\hbox{\insertsection}\ifdim\wd0=0pt\else~{\footnotesize ›}~~\insertsection\fi~%
		\setbox0=\hbox{\insertsubsection}\ifdim\wd0=0pt\else~{\footnotesize ›}~~\insertsubsection\fi~%
		% page no.
		\hfill\insertframenumber{} %
		of \inserttotalframenumber {} ~\vskip2pt
	\end{beamercolorbox}
	% light blue bar
	\begin{beamercolorbox}{lower separation line head}
		\vskip3pt~
	\end{beamercolorbox}
}
% Bottom part (color bars)
\setbeamertemplate{footline}{%
	% light blue bar
	\begin{beamercolorbox}{upper separation line foot}
		\vskip3pt~
	\end{beamercolorbox}
	% dark blue bar
	\begin{beamercolorbox}{footline}
		\vspace{0.5em}
	\end{beamercolorbox}
}
% Section headings (red on light blue)
\setbeamertemplate{frametitle}{
	\ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
	\begin{beamercolorbox}[leftskip=0.4cm,sep=0cm,wd=\paperwidth]{frametitle}
		\usebeamerfont{frametitle}%
		\vbox{}\vskip-1ex%
		\strut\insertframetitle\strut\par%
		{%
			\ifx\insertframesubtitle\@empty%
			\else%
			{\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
			\fi
		}%
		% \vskip-.4cm% set inside beamercolorbox... evil here...
	\end{beamercolorbox}%
}


%remove navigation symbols
\setbeamertemplate{navigation symbols}{}

% small caps section headings
\setbeamerfont{title like}{shape=\scshape}
\setbeamerfont{frametitle}{shape=\scshape}

\setbeamercolor*{headline}                   {bg=CustomDarkBlue , fg=CustomWhite    }
\setbeamercolor*{section in head/foot}       {bg=CustomDarkBlue , fg=CustomWhite    }
\setbeamercolor*{lower separation line head} {bg=CustomPale                         }

\setbeamercolor*{title}                      {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{subtitle}                   {bg=CustomWhite    , fg=CustomDarkBlue }

\setbeamercolor*{section in toc}             {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{subsection in toc}          {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{subsubsection in toc}       {bg=CustomWhite    , fg=CustomDarkBlue }

\setbeamercolor*{normal text}                {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{alerted text}               {                    fg=CustomRed      }
\setbeamercolor*{example text}               {                    fg=CustomDarkBlue }

\setbeamercolor*{frametitle}                 {bg=CustomPale     , fg=CustomRed      }
\setbeamercolor*{block title}                {bg=CustomPale     , fg=CustomBlue     }
\setbeamercolor*{block title alerted}        {bg=CustomPale     , fg=CustomRed      }
\setbeamercolor*{block title example}        {bg=CustomPale     , fg=CustomBlue     }
\setbeamercolor*{block body}                 {bg=CustomPale     , fg=CustomDarkBlue }
\setbeamercolor*{block body alerted}         {bg=CustomPale     , fg=CustomDarkBlue }
\setbeamercolor*{block body example}         {bg=CustomPale     , fg=CustomDarkBlue }

\setbeamercolor*{itemize item}               {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{itemize subitem}            {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{itemize subsubitem}         {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{enumerate item}             {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{enumerate subitem}          {bg=CustomWhite    , fg=CustomDarkBlue }
\setbeamercolor*{enumerate subsubitem}       {bg=CustomWhite    , fg=CustomDarkBlue }

\if@doFootline
	\setbeamercolor*{upper separation line foot} {bg=CustomLightBlue                    }
	\setbeamercolor*{footline}                   {bg=CustomDarkBlue , fg=CustomWhite    }
\fi

